<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/season_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
            android:id="@+id/poster"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tv show name:"
            android:textSize="16dp"
            android:lineHeight="24dp"
            app:layout_constraintLeft_toRightOf="@id/poster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/season_no"
            android:textStyle="bold|italic"/>
    <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16dp"
            android:lineHeight="24dp"
            android:gravity="left"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@id/season_no"
            app:layout_constraintLeft_toRightOf="@id/label1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Arrow"/>
    <TextView
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Season No:"
            android:textSize="16dp"
            android:lineHeight="24dp"
            app:layout_constraintLeft_toRightOf="@id/poster"
            app:layout_constraintTop_toBottomOf="@id/label1"
            android:layout_marginTop="8dp"
            android:textStyle="bold|italic"/>
    <TextView
            android:id="@+id/season_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:lineHeight="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:textAlignment="gravity"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintLeft_toRightOf="@id/label2"
            tools:text="1"/>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/poster"
          android:layout_marginTop="8dp"
          android:background="#1F000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>
